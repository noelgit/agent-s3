{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "out",
    "rootDir": "./",
    "strict": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["vscode", "node"],
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "lib": ["es2015", "dom", "dom.iterable"],
    "moduleResolution": "node"
  },
  "include": [
    "*.ts",
    "types/**/*.d.ts",
    "stubs.d.ts"
  ],
  "exclude": [
    "webview-ui"
  ]
}
